        switch ('dramaSmall') {
            case 'movieSmall':
            case 'movieLarge':
                nslog(1001911);
                break;
            case 'dramaSmall':
                nslog(1001912);
                break;
            case 'varietySmall':
                nslog(1001913);
                break;
        }
        $('.tabCards .videoTab').off('click');
    });
    /*****nslog统计采集 END*****/
