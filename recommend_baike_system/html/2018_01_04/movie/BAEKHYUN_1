        $(this).attr('href', 'http://help.baidu.com/newadd?word=%E6%AD%A5%E6%AD%A5%E6%83%8A%E5%BF%83%EF%BC%9A%E4%B8%BD' + '&&submit_link=' + encodeURIComponent(window.location.href) + '&prod_id=10&category=' + map[i]);
    });

    // 为超出预设内容的表格添加table-responsive控制
    $('.main-content').find('table').each(function(index) {
